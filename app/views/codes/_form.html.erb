
<div class="row">
      <div class="col s12 m6 l6">
        <%= form_for(@code, remote: true) do |f| %>
        <% if @code.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@code.errors.count, "error") %> prohibited this code from being saved:</h2>

            <ul>
            <% @code.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :titulo %><br>
          <%= f.text_field :titulo %>
        </div>
        <div class="field">
          <%= f.label :codigo %><br>
          <%= f.text_area :codigo,'ng-model':'texto'%>
        </div>
       
        <div class="actions">
          <%= f.submit "Guardar" ,class:"waves-effect waves-light btn-large"%>
    
          <a onclick = "$('#form_scanner').submit();" class="waves-effect waves-light btn-large" >Scanear</a>
        </div>
      <% end %>
      <%=form_tag scanner_path, multipart: true,remote:true,style:'visibility:hidden',id:'form_scanner' do %>
              <%=text_area_tag :contenido,nil,:'ng-model' => 'texto'%>
    <%end%>
    </div>
  
    <div id="contenedor_consola" class="col s12 m6 l6">
      <%=render 'consolaR' %>
    </div>

</div>
          



